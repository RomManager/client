{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "target": "ES6",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["./node_modules/*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./src/renderer/components/*"],
      "@common/*": ["./src/common/*"],
      "@main/*": ["./src/main/*"],
      "@renderer/*": ["./src/renderer/*"],
      "@src/*": ["./src/*"],
      "@misc/*": ["./misc/*"],
      "@state/*": ["./src/renderer/state/*"]
    }
  },
  "include": ["src/**/*", "tools/**/*", "tools/postcss/postcss.config.js"]
}
